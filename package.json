{
  "name": "react-portfolio",
  "version": "1.0.0",
  "description": "personal website",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*\" \"npm run client",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jonahkarew/react-portfolio.git"
  },
  "author": "Jonah Karew",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Jonahkarew/react-portfolio/issues"
  },
  "homepage": "https://github.com/Jonahkarew/react-portfolio#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "nodemailer": "^6.4.6",
    "nodemon": "^2.0.2"
  }
}
